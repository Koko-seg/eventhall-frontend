{
  "compilerOptions": {
    "target": "ES2017", // Recommended modern target for Next.js
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // Highly recommended for type safety
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Recommended for modern bundlers
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Important for paths to work correctly
    "paths": {
      "@/*": ["./src/*"], // Already in the first config, good for general aliases
      // Add your specific paths if you prefer more granular control:
      "@/components/*": ["src/components/*"],
      "@/contexts/*": ["src/contexts/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
